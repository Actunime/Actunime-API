{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "declaration": true,
        "types": ["node"],
        "moduleResolution": "node",
        "module": "CommonJS",
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}