{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "eslint.config.mjs"],
  "exclude": ["node_modules"]
}
